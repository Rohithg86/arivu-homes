datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum AssetType {
  SITE_PHOTO
  DESIGN
  ARCHITECTURE
  INNOVATION
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  bio       String?
  photoUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset {
  id          Int       @id @default(autoincrement())
  type        AssetType
  title       String?
  description String?
  url         String
  createdAt   DateTime  @default(now())
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  iconKey     String?
  createdAt   DateTime @default(now())
}
